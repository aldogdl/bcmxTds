{% extends 'panel_base.html.twig' %}

{% block title %}Gestion Tarjetas{% endblock %}

{% block bodyContenedor %}

    <section class="row">
      <article class="col">
        <div class="d-flex">
          <div class="mr-3">
            <small class="badge badge-primary" id="cantiTds">0</small>
          </div>
          <h5 class="text-muted">Lista de Tarjetas</h5>
          <div class="ml-auto">
            <a id="refreshList" class="btn btn-sm text-primary" href="#">
              <small class="mr-2">Refrescar Lista</small> <i class="fas fa-sync-alt"></i>
            </a>
          </div>
        </div>
        <div id="containerTds" class="overflow-auto pr-3 mt-2" style="max-height: 75vh;"> </div>
      </article>
      <article class="col">
        <h5 class="d-block p-0 m-p text-primary" id="titSecNegoSelec">....</h5>
        <small class="text-secondary d-block p-0 m-p mt-1">Id: <b id="titSecNegoSelecId">0</b> Negocio Seleccionado Actualmente</small>
        <div class="progress">
          <div class="progress-bar bg-primary" role="progressbar" aria-valuemin="0" aria-valuemax="100"></div>
        </div>
        <div class="d-flex justify-content-end">
          <small id="califSanitizar" class="bg-dark rounded p-2 text-light d-none">Sinitizando Información CALIFICACIÓN <b id="califTotalRes">0</b> de <b id="califTotal">0</b> </small>
        </div>
        <div id="containerSecundary" class="overflow-auto pr-3 mt-2" style="max-height: 65vh;">
          <h5 class="text-muted d-block p-0 m-p" id="titSecSec">Pizarra de Resultados.</h5>
          <small class="text-secondary d-block p-0 m-p mt-1" id="msgSecSec">Selecciona una tarjeta de la lista para mostrar datos generales completos</small>
        </div>

        <div class="card p-4 shadow border border-info mt-2 d-none" id="msgProccTerminado">
          <div class="d-flex">
            <div class="">
              <i class="fas fa-check text-success" style="font-size: 3rem;"></i>
            </div>
            <div class="ml-3">
              <h4 class="text-primary">¡Proceso Terminado Exitosamente!</h4>
              <small class="text-muted">Puedes proceguir con el siguiente Registro </small>
            </div>
          </div>
        </div>
      </article>
    </section>
{% endblock %}

{% block javascripts %}
  {{ encore_entry_script_tags('lstTarjetas') }}
  <script id="ptlCard" type="text/x-jsrender">{% include 'gestion_tds/widgets/lst_card.html.twig' %}</script>
  <script id="checkProcesos" type="text/x-jsrender">{% include 'gestion_tds/widgets/chec_proceso.html.twig' %}</script>
  <script id="ptlErrorCampo" type="text/x-jsrender">{% include 'gestion_tds/widgets/errores_campos_check.html.twig' %}</script>
  <script id="ptlFrmCategos" type="text/x-jsrender">{% include 'gestion_tds/widgets/categos_frm.html.twig' %}</script>
  <script id="ptlErrorTdImg" type="text/x-jsrender">{% include 'gestion_tds/widgets/error_tds_img.html.twig' %}</script>
  <script id="ptlCheckFranquicias" type="text/x-jsrender">{% include 'gestion_tds/widgets/check_franquicias.html.twig' %}</script>

{% endblock %}
