<div class="card p-2 px-4">
  <%if franqs.length == 0 %>
    <div class="border border-danger p-2">
      <h6><i class="fas fa-exclamation-triangle text-danger"></i> Es Necesario que des de Alta Franquicias</h6>
      <a href="{{ path('admin_franquicias-frm') }}" class="btn btn-sm text-primary d-block text-right">Ir a Gestionar Franquicias</a>
    </div>
  <%else %>
    <form action="#" id="frmFranqs" method="post">
      <div class="form-group">
        <label for="selectFranqs">Franquicias Actuales</label>
        <select class="form-control" id="frmFranqs_franq" name="frmFranqs[franq]">
          <%for franqs %>
          <option value="<%:f_id %>"><%:f_nombre %></option>
          <%/for %>
        </select>
      </div>
      <div class="d-flex justify-content-end">
        <p>
          <h6><i class="fas fa-exclamation-triangle text-danger"></i> PELIGRO Es necesario ubicar este negocio a una Franquicia</h6>
        </p>
        <button type="submit" class="btn btn-primary colorBtnSig" id="btnFranqErr"> Guardar</button>
      </div>
    </form>
  <%/if %>
</div>
