<div>
  <div class="d-flex">
    <%if tipo != 'subcat' %>
      <div class="form-check">
        <input class="form-check-input" type="radio" id="radio_<%:tipo %><%:c_id %>" data-tipo="<%:tipo %>" data-id="<%:c_id %>" data-nombre="<%:c_nombre %>" name="radio_<%:tipo %>[<%:tipo %>]" value="<%:c_id %>">
        <label class="form-check-label" for="radio_<%:tipo %><%:c_id %>">
          <%:c_nombre %>
        </label>
      </div>
    <%else %>
    <div>
      <label class="form-check-label" id="radio_<%:tipo %><%:c_id %>" data-tipo="<%:tipo %>" data-id="<%:c_id %>" data-nombre="<%:c_nombre %>">
        <%:c_nombre %>
      </label>
    </div>
    <%/if %>
    <div class="ml-auto">
      <a href="#" id="btnEdit<%:c_id %>" data-check="radio_<%:tipo %><%:c_id %>" class="text-primary"><i class="fas fa-pencil-alt"></i></a>
      <a href="#" id="btnDel<%:c_id %>" data-check="radio_<%:tipo %><%:c_id %>" class="text-danger ml-2"><i class="far fa-trash-alt"></i></a>
    </div>
  </div>
  <hr class="d-block p-0 m-0 my-1">
</div>
