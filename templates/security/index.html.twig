{% extends 'base.html.twig' %}

{% block title %}Buscomex{% endblock %}

{% block body %}
<div class="container pt-5">
    <div class="d-flex justify-content-center align-items-center">
      <div class="pt-5 w-25">
        <h1 class="text-dark d-block text-center">AUTENTICATE</h1>

        {% if erroresExtras != '' %}
            <div class="alert-danger p-2">
                <p class="text-center"> {{ erroresExtras }} </p>
            </div>
        {% endif %}
        <span class="d-block my-3"></span>

        {{ form_start(frm) }}
            {{ form_widget(frm) }}

            <div class="d-flex justify-content-center">
              <button class="btn btn-primary badge-pill px-5" type="submit" name="button">ENTRAR</button>
            </div>
        {{ form_end(frm) }}
      </div>
    </div>
</div>
{% endblock %}
