{% extends 'panel_base.html.twig' %}

{% block title %}Franquicias{% endblock %}
{% block bodyContenedor %}

  <section class="row">
    <article class="col">


      <section class="row">
        <article class="col-5">
          <h5 class="text-muted">Lista de franquicias.</h5>
          <hr>
          <div class="overflow-auto px-3" style="height:70vh;">
            {% for item in [1,1,1,1,1,1,1] %}
                {% include 'generales/franquicias/widgets/lst-franqs.html.twig' %}
            {% endfor %}
          </div>
        </article>
        <article class="col-7 px-4">

          <h5 class="text-muted">Alta de Nueva Franquicias</h5>
          <hr>
          <div class="overflow-auto p-0" style="height:70vh;">
            <form id="frmGestFranq" action="index.html" method="post">
              <div class="row p-0 m-0">
                <div class="col">
                  {{ form_row(frm.nombre) }}
                </div>
                <div class="col">
                  {{ form_row(frm.nomContac) }}
                </div>
              </div>

              <div class="row p-0 m-0">
                <div class="col">
                  {{ form_row(frm.telContac) }}
                </div>
                <div class="col">
                  {{ form_row(frm.whatsContac) }}
                </div>
              </div>

              <div class="row p-0 m-0">
                <div class="col">
                  {{ form_row(frm.domicilio) }}
                </div>
              </div>

              <div class="row p-0 m-0">
                <div class="col">
                  {{ form_row(frm.dominio) }}
                </div>
                <div class="col">
                  {{ form_row(frm.costoDominio) }}
                </div>
              </div>

              <div class="row p-0 m-0">
                <div class="col">
                  {{ form_row(frm.costoHosting) }}
                </div>
                <div class="col">
                  {{ form_row(frm.anticipo) }}
                </div>
                <div class="col">
                  {{ form_row(frm.nextPagoAt) }}
                </div>
              </div>

              <div class="row p-0 m-0">
                <div class="col-9">
                  <div>
                    {{ form_label(frm.logo) }}
                    <input type="file" id="franquicias_logo" name="franquicias[logo]" required="required" class="form-control py-2" />
                    {{ form_errors(frm.logo) }}
                  </div>
                </div>
                <div class="col-3 d-flex align-items-end pb-1">
                  <button type="submit" class="btn btn-primary btn-sm px-2 btn-block colorBtnSig">Guardar</button>
                </div>
              </div>
              {{ form_widget(frm._token) }}

            </form>
          </div>
        </article>
      </section>
    </article>

  </section>

{% endblock %}

{% block javascripts %}
  {{ encore_entry_script_tags('franq') }}
{% endblock %}
